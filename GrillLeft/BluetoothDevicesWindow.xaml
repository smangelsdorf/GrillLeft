<Window x:Class="GrillLeft.BluetoothDevicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrillLeft"
        mc:Ignorable="d"
        Title="Bluetooth Devices" Height="350" Width="525" MinHeight="200" MinWidth="300">
    <Grid>
        <ListBox x:Name="deviceListBox" Margin="10,44,10,40 " SelectionChanged="deviceListBox_SelectionChanged" />
        <Label x:Name="loadingLabel" Content="Loading..." Margin="10,10,10,64" Panel.ZIndex="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button x:Name="refreshButton" Content="Refresh" Margin="0,0,10,10" HorizontalAlignment="Right" Width="76" Height="20" VerticalAlignment="Bottom" Click="refreshButton_Click" />
        <Button x:Name="continueButton" Content="Continue" Margin="10,0,0,10" HorizontalAlignment="Left" Width="76" Height="20" VerticalAlignment="Bottom" IsEnabled="False" Click="continueButton_Click" />
        <Label x:Name="label" Content="Select Bluetooth device to continue" Margin="10,10,10,0" VerticalAlignment="Top" Height="29" />
    </Grid>
</Window>