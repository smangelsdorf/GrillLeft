<Window x:Class="GrillLeft.MonitoringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrillLeft"
        mc:Ignorable="d"
        Title="MonitoringWindow" Height="400" Width="400">
    <Grid>
        <local:ThermometerData x:Name="dataLeft" Margin="10,10,200,200" />
        <local:ThermometerData x:Name="dataRight" Margin="0,10,10,200" HorizontalAlignment="Right" Width="182" />
        <local:TemperatureGraph x:Name="temperatureGraph" Margin="10,180,10,10" />
    </Grid>
</Window>